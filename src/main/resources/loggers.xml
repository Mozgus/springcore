<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger" class="com.berryjam.springcore.loggers.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="com.berryjam.springcore.loggers.FileEventLogger"
          init-method="init">
        <constructor-arg value="target/events_log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="com.berryjam.springcore.loggers.CacheFileEventLogger"
          destroy-method="destroy" parent="fileEventLogger">
        <constructor-arg index="1" value="5"/>
    </bean>

    <bean id="combinedEventLogger" class="com.berryjam.springcore.loggers.CombinedEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>

</beans>
